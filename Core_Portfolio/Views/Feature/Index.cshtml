@using EntityLayer.Concrete
@model List<Feature>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Feature List Table</h4>    
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Header</th>
                                <th>Name</th>
                                <th>Title</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td> @item.FeatureID </td>
                                    <td> @item.Header </td>
                                    <td> @item.Name  </td>
                                    <td> @item.Title  </td> 
                                    <td>
                                        <div class="avatar-group">
                                            <a href="/Feature/UpdateFeature/@item.FeatureID" class="btn btn-primary"> Update</a>
                                        </div>
                                    </td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>