@using EntityLayer.Concrete
@model List<ContactMessage>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Skill List Table</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-bold">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Date</th>
                <th scope="col" class="sort" data-sort="budget">Sender</th>
                <th scope="col">Actions</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">
                        <div class="media align-items-center">
                            <div class="media-body">
                                <strong> <span class="name mb-0 text-sm">@item.MessageID</span></strong>
                            </div>
                        </div>
                    </th>
                    <td class="budget">
                        @item.Date.ToShortDateString()
                    </td>
                    <td class="budget">
                        @item.Name
                    </td>       
                    <td>
                        <div class="avatar-group">
                            <a href="/Contact/ContactMessageDetails/@item.MessageID" class="btn btn-warning"> Details</a>
                            @Html.ActionLink("Delete", "DeleteContactMessage", new { id = item.MessageID }, new { @class = "btn btn-danger", onclick = "return confirm ('Do you really want to delete it?')" })
                        </div>
                    </td>
                    <td class="text-right">
                        <div class="dropdown">
                            <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-ellipsis-v"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Something else here</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
