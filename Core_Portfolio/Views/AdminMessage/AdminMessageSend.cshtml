@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminMessageSend";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">New Message</div>
                <div class="card-body">
                    <form class="form-group" method="post">
                        <div class="form-group">
                            @Html.Label("Subject")
                            @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Receiver")
                            @Html.TextBoxFor(x => x.Recevier, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Content")
                            @Html.TextAreaFor(x => x.MessageContent, new { @class = "form-control" })
                        </div>
                        <button type="submit" @* onclick="confirmAndRedirect()" *@ class="btn btn-primary">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

