@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Service List Table</h4>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Title</th>    
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td> @item.ServiceID </td>
                                    <td> @item.Title </td>                  
                                    <td>
                                        <div class="avatar-group">
                                            @Html.ActionLink("Delete", "DeleteService", new { id = item.ServiceID }, new { @class = "btn btn-danger", onclick = "return confirm ('Do you really want to delete it?')" })
                                            <a href="/Service/UpdateService/@item.ServiceID" class="btn btn-primary"> Update</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <a href="/Service/AddService/" class="btn btn-success">  Add New Service</a>
</div>