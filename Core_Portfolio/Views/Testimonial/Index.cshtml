@using EntityLayer.Concrete
@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Testimonial List</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                </th>
                                <th> # </th>
                                <th> Client Name </th>
                                <th> Company </th>
                                <th> Actions </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                <td>
                                </td>
                                <td>
                                        @item.TestimonialID
                                </td>
                                <td>
                                    <img src="@item.ImageURL" alt="image" />
                                    <span class="pl-2">@item.ClientName</span>
                                </td>
                                <td> @item.Company </td>
                                    <td>
                                        @Html.ActionLink(" Delete ", "DeleteTestimonial", new { id = item.TestimonialID }, new { @class = "btn btn-danger", onclick = "return confirm ('Do you really want to delete it?')" })
                                        <a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-primary"> Update </a>
                                    </td>
                            </tr>
                            }
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <a href="/Testimonial/AddTestimonial/" class="btn btn-success"> <i class="ni ni-collection"> Add New Testimonial</i></a>
</div>
