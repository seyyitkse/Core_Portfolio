@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "SenderMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sent</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Sender</th>
                            <th>Recevier</th>
                            <th>Subject</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.WriterMessageID</td>
                                <td><b>@item.SenderName</b></td>
                                <td>@item.RecevierName</td>
                                <td>@item.Subject</td>
                                <td>@item.Date.ToShortDateString()</td>
                                <td>
                                    <a href="/Writer/Message/MessageDetails/@item.WriterMessageID" class="btn btn-info btn-md">
                                        <i class="mdi mdi-eye"></i>
                                        View Message
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
