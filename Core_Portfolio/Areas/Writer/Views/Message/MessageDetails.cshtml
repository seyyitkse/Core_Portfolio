@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Message Details</div>
                <div class="card-body">
                    <form class="form-group">
                        <div class="form-group">
                            @Html.Label("Subject")
                            @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", @readonly = true })
                        </div>
                        <div class="form-group">
                            @Html.Label("Sender")
                            @Html.TextBoxFor(x => x.Sender, new { @class = "form-control", @readonly = true })
                        </div>
                        <div class="form-group">
                            @Html.Label("Receiver")
                            @Html.TextBoxFor(x => x.Recevier, new { @class = "form-control", @readonly = true })
                        </div>
                        <div class="form-group">
                            @Html.Label("Content")
                            @Html.TextAreaFor(x => x.MessageContent, new { @class = "form-control", @readonly = "readonly", rows = 5 })
                        </div>
                        <a href="@Url.Action("RecevierMessage", "Message")" class="btn btn-primary">Back to Home</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
